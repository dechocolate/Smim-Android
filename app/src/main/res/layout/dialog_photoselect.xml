<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:anytextview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_gray">

    <LinearLayout
        android:id="@+id/linearlayout_dialog_photoselect_background"
        android:layout_width="296dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:orientation="vertical">


        <!--상단 레이아웃 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >


            <!--내용 레이아웃 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:gravity="center_horizontal"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_dialog_photoselect_take"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:foreground="?attr/selectableItemBackground"
                    android:background="@drawable/xml_color_white_dcdcdc"
                    android:gravity="center"
                    android:text="@string/dialog_phototake" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_dcdcdc" />

                <TextView
                    android:id="@+id/textview_dialog_photoselect_select"

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:foreground="?attr/selectableItemBackground"
                    android:background="@drawable/xml_color_white_dcdcdc"
                    android:gravity="center"
                    android:text="@string/dialog_photoalbum" />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
